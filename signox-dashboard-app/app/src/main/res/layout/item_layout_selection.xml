<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="12dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:id="@+id/viewStatusIndicator"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/circle_shape" />

                <TextView
                    android:id="@+id/tvLayoutName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Layout Name"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginStart="8dp"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvLayoutDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Layout description"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:ellipsize="end" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvLayoutDimensions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1920x1080"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:drawableStart="@android:drawable/ic_menu_crop"
                    android:drawablePadding="4dp"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/tvSectionCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 sections"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:drawableStart="@android:drawable/ic_menu_view"
                    android:drawablePadding="4dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
