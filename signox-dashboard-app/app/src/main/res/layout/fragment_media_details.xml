<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Thumbnail -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/ivThumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Media thumbnail" />

        </com.google.android.material.card.MaterialCardView>

        <!-- File Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="File Name"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvFileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="example.jpg"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp" />

        <!-- File Type -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tvFileType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IMAGE"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- File Size -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tvFileSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.5 MB"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Dimensions (for images) -->
        <TextView
            android:id="@+id/tvDimensionsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dimensions"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:layout_marginTop="16dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvDimensions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1920 x 1080"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:visibility="gone" />

        <!-- Duration (for videos) -->
        <TextView
            android:id="@+id/tvDurationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:layout_marginTop="16dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:30"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:visibility="gone" />

        <!-- Upload Date -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uploaded"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tvUploadDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jan 01, 2024 at 12:00 PM"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Expiry Date -->
        <TextView
            android:id="@+id/tvExpiryDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expires On"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tvExpiryDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not set"
            android:textColor="@color/warning"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- URL -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="URL"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tvUrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="http://example.com/media/file.jpg"
            android:textColor="@color/primary"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:autoLink="web" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPreview"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Preview"
                android:textAllCaps="false"
                app:icon="@android:drawable/ic_menu_view"
                app:iconGravity="textStart" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEdit"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Edit"
                android:textAllCaps="false"
                app:icon="@android:drawable/ic_menu_edit"
                app:iconGravity="textStart" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelete"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Delete"
                android:textAllCaps="false"
                android:textColor="@color/error"
                app:icon="@android:drawable/ic_menu_delete"
                app:iconGravity="textStart"
                app:iconTint="@color/error"
                app:strokeColor="@color/error" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnClose"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Close"
                android:textAllCaps="false" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
