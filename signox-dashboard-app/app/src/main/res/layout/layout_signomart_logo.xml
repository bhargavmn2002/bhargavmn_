<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <!-- Logo Text with Yellow O -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvSignPart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGN"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.02" />

        <TextView
            android:id="@+id/tvOPart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="O"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="#FCD34D"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.02" />

        <TextView
            android:id="@+id/tvMartPart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MART"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.02" />

    </LinearLayout>

    <!-- Yellow Underline (half width, left aligned) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <View
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="0.5"
            android:background="#FCD34D" />

        <View
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="0.5"
            android:background="@android:color/transparent" />

    </LinearLayout>

    <!-- Tagline -->
    <TextView
        android:id="@+id/tvTagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We sign your growth"
        android:textSize="14sp"
        android:textStyle="italic"
        android:textColor="@color/text_secondary"
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="4dp"
        android:layout_gravity="end"
        android:paddingEnd="8dp"
        android:paddingStart="0dp" />

</LinearLayout>
