<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp">

    <!-- Logo and Branding -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="48dp">

        <!-- Logo on Left -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/signomart_logo"
            android:background="@android:color/white"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:layout_marginEnd="16dp"
            android:contentDescription="SignoMart Logo" />

        <!-- Text on Right -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="start">

            <!-- SIGNOMART - all same color -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SIGNOMART"
                    android:textColor="#666666"
                    android:textSize="48sp"
                    android:textStyle="bold|italic" />

            </LinearLayout>

            <!-- We sign your growth with underline -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <View
                    android:layout_width="120dp"
                    android:layout_height="3dp"
                    android:background="#666666"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="We sign your growth"
                    android:textColor="#666666"
                    android:textSize="16sp"
                    android:textStyle="italic" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Enter this code on your admin dashboard to pair this device:"
        android:textColor="#CCCCCC"
        android:textSize="18sp"
        android:gravity="center" />

    <!-- Prominent pairing code display -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="#333333"
        android:padding="32dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/pairingCodeDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123456"
            android:textColor="@android:color/white"
            android:textSize="64sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:letterSpacing="0.2" />

    </LinearLayout>

    <!-- Waiting indicator -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <View
            android:id="@+id/waitingIndicator"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="8dp"
            android:background="@android:color/white"
            android:alpha="0.7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waiting for pairing..."
            android:textColor="#CCCCCC"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Action buttons -->
    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#555555"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:text="Reset / Unpair"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <Button
        android:id="@+id/serverConfigButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:text="⚙️ Server Settings"
        android:textColor="#CCCCCC"
        android:textSize="12sp" />

</LinearLayout>